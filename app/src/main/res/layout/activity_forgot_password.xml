<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/linear_user_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/edittext_reset_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24sp"
                    android:layout_marginStart="@dimen/dimen_24dp"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:hint="@string/text_mobile_number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    tools:ignore="UnusedAttribute" />

                <EditText
                    android:id="@+id/edittext_reset_eamil_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24sp"
                    android:layout_marginStart="@dimen/dimen_24dp"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:hint="Email Id"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    tools:ignore="UnusedAttribute" />


                <Button
                    android:id="@+id/button_reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="24sp"
                    android:layout_marginStart="@dimen/dimen_24dp"
                    android:layout_marginTop="12dp"
                    android:text="Submit"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/linear_user_new_password"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_24dp"
                        android:layout_marginStart="@dimen/dimen_24dp"
                        android:layout_marginTop="@dimen/dimen_24dp"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/textinputedittext_reset_password"
                            android:hint="New Password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:paddingEnd="0dp"
                            android:paddingStart="8dp"
                            android:singleLine="true"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_24dp"
                        android:layout_marginStart="@dimen/dimen_24dp"
                        android:layout_marginTop="@dimen/dimen_24dp"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/textinputedittext_reset_confirm_password"
                            android:hint="Confirm Password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:paddingEnd="0dp"
                            android:paddingStart="8dp"
                            android:singleLine="true"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>



                    <Button
                        android:id="@+id/button_reset_submit"
                        android:text="submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="24sp"
                        android:layout_marginStart="@dimen/dimen_24dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="12dp" />

                </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>